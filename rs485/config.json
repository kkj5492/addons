{
  "name": "RS485 To MQTT",
  "version": "1.0.0",
  "slug": "RS485",
  "description": "RS485 To MQTT for Homeassistant",
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ],
  "url": "https://github.com/kkj5492/addons",
  "startup": "application",
  "boot": "auto",
  "auto_uart": true,
  "map": [
    "share:rw"
  ],
  "options": {
    "RS485": {
      "type": "Serial"
    },
    "Serial": {
      "port1": "/dev/ttyUSB0"
    },
    "SerialDevice": {
      "port1": "rs485"
    },
    "MQTT": {
      "anonymous": false,
      "server": "192.168.x.x",
      "username": "id",
      "password": "pw"
    }
  },
  "schema": {
    "RS485": {
      "type": "str"
    },
    "Serial": {
      "port1": "str"
    },
    "SerialDevice": {
      "port1": "str"
    },
    "MQTT": {
      "anonymous": "bool",
      "server": "str",
      "username": "str",
      "password": "str"
    }
  }
}
